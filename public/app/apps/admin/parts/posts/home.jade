.row
	.col-md-3
		.card
			.header
				h4.title Create
				hr
				p.category Click below to [Add] a post to the database.				
			.content
				p
					a.pull-right.btn.btn-primary(ui-sref="newPosts") Create Post
				.clearfix
.row
	.col-md-12
		.card.card-plain
			.header
				h4.title Articles
				p.category Some of the  articles currently in the database
			.content.table-responsive.table-full-width
				table.table.table-hover
					thead
						tr
							th #
							th Title
							th Author
							th Published	
							th
					tbody
						tr(ng-repeat="post in posts", id="{{post._id}}")
							td {{ $index + 1 }}
							td {{ post.postTitle }}
							td {{ post.author }}
							td {{ post.published | date }}
							td
								a.btn.btn-default.btn-xs.btn-simple(href="/#!/post/{{post._id}}", target="blank", rel="tooltip")
									i.ti-new-window
									|&nbsp;&nbsp;View Page
								|&nbsp;&nbsp;&nbsp;&nbsp;
								a.btn.btn-primary.btn-xs.btn-simple(ui-sref="post({id: post._id})", rel="tooltip")
									i.ti-pencil
									|&nbsp;&nbsp;Edit
								|&nbsp;&nbsp;&nbsp;&nbsp;								
								a.btn.btn-danger.btn-xs.btn-simple(ng-click="delete(post._id)", title="delete {{ post.postTitle }}", rel="tooltip")
									i.ti-trash
									|&nbsp;&nbsp;Delete