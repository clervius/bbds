.row
	.col-md-3
		.card
			.header
				h4.title Create
				hr
				p.category Click below to [Add] an athlete to the database.				
			.content
				p
					a.pull-right.btn.btn-primary(ui-sref="newAthlete") Create Athlete
				.clearfix
.row
	.col-md-12
		.card.card-plain
			.header
				h4.title Athletes
				p.category Some of the Athletes currently in the database
			.content.table-responsive.table-full-width
				table.table.table-hover
					thead
						tr
							th 
							th Athlete
							th Country
							th Subtitle							
							th # Shows
							th Albums
							th
					tbody
						tr(ng-repeat="athlete in athletes")
							td(style="background-image:url('{{athlete.profile.picture.url}}'); background-size:cover")
							td {{ athlete.profile.firstName}} {{ athlete.profile.lastName}}
							td
								img(src="img/flags/{{athlete.countries[0].countryName | lowercase}}.png")
							td {{ athlete.profile.subtitle}}
							td {{ athlete.competitions.length }}
							td {{ athlete.galleries.length }}
							td 
								a.btn.btn-primary.btn-sm.btn-fill(ui-sref="athlete({id: athlete._id})")
									i.ti-pencil
									|&nbsp;&nbsp;Edit
								|&nbsp;&nbsp;&nbsp;&nbsp;
								a.btn.btn-default.btn-sm.btn-fill(href="/#!/athlete/{{athlete._id}}", target="blank")
									i.ti-new-window
									|&nbsp;&nbsp;View Page