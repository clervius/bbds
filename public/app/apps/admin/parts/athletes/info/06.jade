.header
	h5.title Videos
		a.btn.btn-xs.btn-info.btn-fill.pull-right(ng-click="addVideo()", style="position:relative;top:-3px") &nbsp;&nbsp;
			i.ti-control-play
			|&nbsp;&nbsp;Add Video&nbsp;&nbsp;
hr
.row
	ul.list-unstyled
		li.col-md-3(ng-repeat="video in athlete.videos")
			a.text-danger(href="{{video.link}}", target="blank", style="position:relative")
				img.img-responsive.img-thumbnail(src="{{video.thumb}}", style="opacity:.5")
				.clearfix
				p.text-center(style="position:absolute;top:-60px;left:60px")
					i.fa-play.fa