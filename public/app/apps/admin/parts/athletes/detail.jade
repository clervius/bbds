.row
	.col-md-7
		.row
			.col-md-12.text-right
				a.btn.btn-sm.btn-default.btn-fill(href="/#!/athlete/{{athlete._id}}", target="blank") View Page
				|&nbsp;&nbsp;&nbsp;
				button.btn.btn-sm.btn-primary.btn-fill(ng-click="updateAth()") Update Athlete
		.clearfix
		br
		.card
			.header
				h4.title {{ athlete.profile.firstName}} {{ athlete.profile.lastName}}
				p.category Pretty soon you will be able to edit this athlete's information
			hr
			.content
				form
					.row
						.col-md-12
							.nav-tabs-navigation
								.nav-tabs-wrapper
									ul.nav.nav-tabs(id="tabs", data-tabs="tabs")
										li.active
											a(data-toggle="tab", data-target="#01", role="tab") 
												i.ti-user
												|&nbsp;&nbsp;Profile&nbsp;&raquo;
										li
											a(data-toggle="tab", data-target="#02", role="tab") 
												i.ti-comments
												|&nbsp;&nbsp;Contact&nbsp;&raquo;
										li
											a(data-toggle="tab", data-target="#03", role="tab") 
												i.ti-bookmark-alt
												|&nbsp;&nbsp;Editorials&nbsp;&raquo;
										li(ng-show="athlete.videos.length")
											a(data-toggle="tab", data-target="#06", role="tab")
							.tab-content(id="my-tab-content")
								.tab-pane.active.fade.in(id="01")
									include info/01
								.tab-pane.fade.in(id="02")
									include info/02
								.tab-pane.fade.in(id="03")
									include info/03
								.tab-pane.fade.in(id="06")
									include info/06
	.col-md-5
		.row
			.col-md-12.text-right
				a.btn.btn-sm.btn-default.btn-fill(ng-click="addRecord()") &nbsp;&nbsp;
					i.ti-plus
					|&nbsp;&nbsp;Add Show&nbsp;&nbsp;
		.card.card-plain
			include info/04
		.row(ng-show="athlete.galleries.length")
			.col-md-12.text-right
				a.btn.btn-sm.btn-default.btn-fill(ui-sref="athlete.addAlbum({ id: athlete._id})") &nbsp;&nbsp;
					i.ti-plus
					|&nbsp;&nbsp;Add Album &nbsp;&nbsp;
		.card.card-plain(ng-show="athlete.galleries.length")
			include info/05
.row(ui-view="")
script.
	$('.datepicker').datetimepicker({ format: 'MM/DD/YYYY', icons: { time: "fa fa-clock-o", date: "fa fa-calendar", up: "fa fa-chevron-up", down: "fa fa-chevron-down", previous: 'fa fa-chevron-left', next: 'fa fa-chevron-right', today: 'fa fa-screenshot', clear: 'fa fa-trash', close: 'fa fa-remove' } });
