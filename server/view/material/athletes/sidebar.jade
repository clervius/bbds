each account in athlete.social
	- if(typeof(account.link) !== 'undefined')
		if account.service == 'public Facebook'
			.row(style="margin-bottom:30px")
				.col-md-12
					.fb-page.img-raised(data-href="#{account.link}", data-small-header="true", data-adapt-container-width="true", data-hide-cover="false", data-show-facepile="true")
if athlete.published.length > 0
	.row
		.col-md-12
			.card
				.content
					h4.title Featured Articles
					ul.list-unstyled
						each article in athlete.published
							li(style="margin-bottom:10px")
								a(target="blank", href="#{article.link}", style="text-decoration:none;color:rgba(0,0,0,.5)")
									i.fa.fa-globe
									|&nbsp;&nbsp;#{article.title}
if athlete.videos.length > 0
	h4.title Videos
	.row(style="margin-bottom:25px")
		each video in athlete.videos
			.col-md-4.videoLink
				a.imgShow.strip.img-rounded.img-raised(href="#{video.link}", style="background-image: url('#{video.thumb}');display:block;position:relative")
					include ../includes/playIcon

.row
	.col-md-12
		.card
			.content.text-center(style="background-color:rgba(0,0,0,.05); height:70px")
				.card-title Responsive Ad goes here
.col-md-12
	include ../posts/sidebarPosts